{
  "version": 2,
  "buildCommand": "npm ci && npm --prefix client ci && npm --prefix client run build",
  "outputDirectory": "client/build",
  "functions": {
    "api/index.js": {
      "runtime": "nodejs18.x"
    }
  },
  "routes": [
    { "src": "/api/(.*)", "dest": "/api/index.js" },
    { "src": "/(.*)", "dest": "/index.html" }
  ]
}
